{% extends "admin/admin_base.jinja2" %}
{% block admin_content %}
    <hr />
    <h1>管理员看板</h1>
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">项目</th>
                    <th scope="col">总数</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>1</td>
                    <td>用户</td>
                    <td>{{ user_count }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm"
                           href="{{ url_for('admin_user_list') }}">详情</a>
                    </td>
                </tr>
                <tr>
                    <td>2</td>
                    <td>相册</td>
                    <td>{{ media_group_count }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm"
                           href="{{ url_for('admin_media_group_list') }}">详情</a>
                    </td>
                </tr>
                <tr>
                    <td>3</td>
                    <td>媒体素材</td>
                    <td>{{ media_count }}</td>
                    <td>
                        <a class="btn btn-primary btn-sm"
                           href="{{ url_for('admin_media_list') }}">详情</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
{% endblock admin_content %}
