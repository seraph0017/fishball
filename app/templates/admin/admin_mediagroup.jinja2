{% extends "admin/admin_base.jinja2" %}
{% block admin_content %}
    <hr />
    <div class="row">
        <div class="col">
            <h1>相册看板</h1>
        </div>
        <div class="col">
            <button class="btn btn-primary float-end btn-lg"
                    data-bs-toggle="modal"
                    data-bs-target="#media_group_add">新增</button>
        </div>
    </div>
    <hr />
    <div class="table-responsive">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">相册名</th>
                    <th scope="col">是否激活</th>
                    <th scope="col">相册描述</th>
                    <th scope="col">相册级别</th>
                    <th scope="col">创建时间</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                {% for media_group in media_group_list %}
                    <tr>
                        <td>{{ media_group.id }}</td>
                        <td>{{ media_group.title }}</td>
                        <td>
                            {% if media_group.is_active %}
                                <i class="bi bi-hand-thumbs-up-fill"></i>
                            {% else %}
                                <i class="bi bi-hand-thumbs-down-fill"></i>
                            {% endif %}
                        </td>
                        <td>{{ media_group.description }}</td>
                        <td>{{ media_group.group_level }}</td>
                        <td>{{ media_group.create_time }}</td>
                        <td>
                            <a class="btn btn-primary btn-sm"
                               href="{{ url_for('admin_media_group_detail', media_group_id=media_group.id) }}">编辑</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade modal-dialog modal-dialog-centered"
         id="media_group_add"
         tabindex="-1"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="{{ url_for('media_group_add') }}" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">请输入相册信息</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="email"
                                   class="form-control"
                                   name="title"
                                   id="title"
                                   placeholder="name@example.com"/>
                            <label for="floatingInput">相册名</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="textarea"
                                   class="form-control"
                                   name="description"
                                   id="description"
                                   placeholder="name@example.com"/>
                            <label for="floatingInput">相册描述</label>
                        </div>
                        <div class="form-floating mb-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="inlineRadioOptions"
                                       id="group_level_1"
                                       value="1"/>
                                <label class="form-check-label" for="inlineRadio1">家人能看</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="inlineRadioOptions"
                                       id="group_level_2"
                                       value="2"/>
                                <label class="form-check-label" for="inlineRadio2">朋友能看</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="inlineRadioOptions"
                                       id="group_level_3"
                                       value="3"/>
                                <label class="form-check-label" for="inlineRadio3">其他人都能看</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
                        <button id="ok" type="button" class="btn btn-primary">提交</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock admin_content %}
{% block js_plus %}
    <script type="text/javascript">
    $(document).ready(function(){
        $("#ok").click(function(e){
            var title = $("#title").val();
                description = $("#descritpion").val();
                group_level = $("input:radio:checked").val();
                payload = {
                    "title": title,
                    "description": description,
                    "group_level": group_level,
                }
            $.ajax({
                headers : {
                    'Accept' : 'application/json',
                    'Content-Type' : 'application/json'
                },
                url: "{{ url_for('media_group_add')}}",
                type: "POST" ,
                data: JSON.stringify(payload),
                success: function(result){
                    window.location.reload()
                }
            })
            return false
        })
    })
    </script>
{% endblock js_plus %}
