{% extends "admin/admin_base.jinja2" %}
{% block admin_content %}
    <hr />
    <div class="row">
        <div class="col">
            <h1>用户看板</h1>
        </div>
        <div class="col">
            <button class="btn btn-primary float-end btn-lg"
                    data-bs-toggle="modal"
                    data-bs-target="#user_add">新增</button>
        </div>
    </div>
    <hr />
    <div class="table table-striped table-responsive table-hover">
        <table class="table table-striped table-sm">
            <thead>
                <tr>
                    <th scope="col">id</th>
                    <th scope="col">用户名/邮箱</th>
                    <th scope="col">是否激活</th>
                    <th scope="col">是否是超管</th>
                    <th scope="col">用户类型</th>
                    <th scope="col">昵称</th>
                    <th scope="col">创建时间</th>
                    <th scope="col">操作</th>
                </tr>
            </thead>
            <tbody>
                {% for user in user_list %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>
                            {% if user.is_active %}
                                <i class="bi bi-hand-thumbs-up-fill"></i>
                            {% else %}
                                <i class="bi bi-hand-thumbs-down-fill"></i>
                            {% endif %}
                        </td>
                        <td>
                            {% if user.is_superuser %}
                                <i class="bi bi-hand-thumbs-up-fill"></i>
                            {% else %}
                                <i class="bi bi-hand-thumbs-down-fill"></i>
                            {% endif %}
                        </td>
                        <td>{{ user.user_type }}</td>
                        <td>{{ user.nick_name }}</td>
                        <td>{{ user.create_time }}</td>
                        <td>
                            <a class="btn btn-primary btn-sm"
                               href="{{ url_for('admin_user_detail', user_id=user.id) }}">编辑</a>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
    <!-- Modal -->
    <div class="modal fade modal-dialog modal-dialog-centered"
         id="user_add"
         tabindex="-1"
         aria-labelledby="exampleModalLabel"
         aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <form action="{{ url_for('user_add') }}" method="post">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">请输入用户信息</h5>
                        <button type="button"
                                class="btn-close"
                                data-bs-dismiss="modal"
                                aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        <div class="form-floating mb-3">
                            <input type="email"
                                   class="form-control"
                                   name="email"
                                   id="email"
                                   placeholder="name@example.com"/>
                            <label for="floatingInput">用户名/邮箱</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="password"
                                   class="form-control"
                                   name="password"
                                   id="password"
                                   placeholder="name@example.com"/>
                            <label for="floatingInput">密码</label>
                        </div>
                        <div class="form-floating mb-3">
                            <input type="text"
                                   class="form-control"
                                   name="nick_name"
                                   id="nick_name"
                                   placeholder="name@example.com"/>
                            <label for="floatingInput">用户昵称</label>
                        </div>
                        <div class="form-floating mb-3">
                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="inlineRadioOptions"
                                       id="user_type_1"
                                       value="1"/>
                                <label class="form-check-label" for="inlineRadio1">家人</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="inlineRadioOptions"
                                       id="user_type_2"
                                       value="2"/>
                                <label class="form-check-label" for="inlineRadio2">朋友</label>
                            </div>
                            <div class="form-check form-check-inline">
                                <input class="form-check-input"
                                       type="radio"
                                       name="inlineRadioOptions"
                                       id="user_type_3"
                                       value="3"/>
                                <label class="form-check-label" for="inlineRadio3">其他人</label>
                            </div>
                        </div>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">关闭</button>
                        <button id="ok" type="button" class="btn btn-primary">提交</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
{% endblock admin_content %}
{% block js_plus %}
    <script src="{{ url_for('static', path='/js/md5.min.js')}}"></script>
    <script type="text/javascript">
    $(document).ready(function(){
        $("#ok").click(function(e){
            var email = $("#email").val();
                hashed_password = md5($("#password").val());
                nick_name = $("#nick_name").val();
                user_type = $("input:radio:checked").val();
                payload = {
                    "email": email,
                    "hashed_password": hashed_password,
                    "nick_name": nick_name,
                    "user_type": user_type,
                }
            $.ajax({
                headers : {
                    'Accept' : 'application/json',
                    'Content-Type' : 'application/json'
                },
                url: "{{ url_for('user_add')}}",
                type: "POST" ,
                data: JSON.stringify(payload),
                success: function(result){
                    window.location.reload()
                }
            })
            return false
        })
    })
    </script>
{% endblock js_plus %}
